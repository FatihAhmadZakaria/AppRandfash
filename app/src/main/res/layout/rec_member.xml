<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="15dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/product_kaos"
            android:background="@drawable/bt_rounded"/>
        <TextView
            android:id="@+id/textMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spiderman T-Shirt"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp "
                android:textSize="12sp"
                android:textColor="@color/abu_abu"/>
            <TextView
                android:id="@+id/texta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="249.000"
                android:textSize="12sp"
                android:textColor="@color/abu_abu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp "
                android:textSize="10sp"
                android:textColor="@color/abu_abu"/>
            <TextView
                android:id="@+id/textb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="299.000"
                android:textSize="10sp"
                android:textColor="@color/abu_abu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: Rp "
                android:textSize="12sp"
                android:textColor="@color/green1"/>
            <TextView
                android:id="@+id/textc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="249.000"
                android:textSize="12sp"
                android:textColor="@color/green1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="-"
                android:textSize="10sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:paddingTop="4dp"/>
            <TextView
                android:paddingTop="4dp"
                android:layout_width="43dp"
                android:layout_height="20dp"
                android:text="1"
                android:layout_marginHorizontal="6dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textAlignment="center"
                android:paddingTop="4dp"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>