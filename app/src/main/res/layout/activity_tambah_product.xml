<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTambahProduct"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/goStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Produk"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"/>
            <EditText
                android:id="@+id/tambahProductName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Product name"
                android:layout_marginTop="9dp"
                android:background="@drawable/ed_rounded"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/tambahPrice"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Product Price"
                android:layout_marginTop="9dp"
                android:background="@drawable/ed_rounded"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/tambahImage"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Product Image"
                android:layout_marginTop="9dp"
                android:background="@drawable/ed_rounded"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/tambahDescription"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Product Description"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ed_rounded"
                android:padding="5dp"/>
            <Button
                android:id="@+id/tambahButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Add"
                android:background="@drawable/bt_rounded"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/green_primary"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>