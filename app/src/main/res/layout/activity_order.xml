<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityOrder">
    <ImageView
        android:id="@+id/orderImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/product_kaos"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/cv_rounded">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/abu_abu2">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Detail"/>
            </LinearLayout>
            <TextView
                android:id="@+id/poNamaProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaos Kasual"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_below="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/green_tokped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="20dp"
                    android:text="Rp  "/>
                <TextView
                    android:id="@+id/poHarga"
                    android:layout_below="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price"
                    android:textColor="@color/green_tokped"
                    android:textSize="20dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/poDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kaos kasual dengan bahan lembut dan dijahit dengan rapi oleh Profesional"
                android:layout_marginHorizontal="10dp"
                android:textSize="12sp"/>
            <Button
                android:id="@+id/poOrder"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/cv_rounded"
                android:backgroundTint="@color/green1"
                android:layout_marginBottom="15dp"
                android:text="Order now"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>